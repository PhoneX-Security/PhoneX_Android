<?xml version="1.0" encoding="utf-8"?>

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:overScrollMode="ifContentScrolls">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">


                <TextView android:id="@+id/messageText"
                    android:textSize="18sp"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/trial_created_message"/>

                <TextView
                    android:id="@+id/field1"
                    android:textSize="18sp"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:text="@string/trial_created_login"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/messageText"
                    />

                <TextView
                    android:id="@+id/sipName"
                    android:textSize="18sp"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/orange"
                    android:layout_toRightOf="@id/field1"
                    android:layout_below="@+id/messageText"
                    />


                <TextView
                    android:id="@+id/field2"
                    android:textSize="18sp"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trial_created_pass"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/field1"
                    />


                <TextView
                    android:id="@+id/password"
                    android:textSize="18sp"
                    style="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/orange"
                    android:layout_toRightOf="@id/field2"
                    android:layout_below="@+id/field1"
                    />

                </RelativeLayout>
        </ScrollView>
