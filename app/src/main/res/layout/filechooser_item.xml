<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/list_detail_item_padding"
        android:paddingRight="@dimen/list_detail_item_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/selection_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_detail_image_size"
            android:gravity="center"
            android:textSize="16sp"
            android:ellipsize="marquee"
            android:text=""
            android:textColor="@color/text_whitesmoke"
            />

        <ImageView
            android:id="@+id/photo"
            android:padding="3dp"
            android:layout_width="@dimen/list_detail_image_size"
            android:layout_height="@dimen/list_detail_image_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_detail_image_size"
                android:gravity="center_vertical"
                android:textSize="@dimen/list_font"
                android:ellipsize="marquee"
                android:paddingLeft="9dip"
                android:paddingRight="9dip"
                android:text="filename"
                android:textColor="@color/text_whitesmoke"
                />

            <FrameLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:paddingLeft="9dip"
                    android:paddingRight="9dip"
                    android:text="size"
                    android:textColor="@color/text_whitesmoke"
                    />
                <TextView
                    android:id="@+id/datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:paddingLeft="9dip"
                    android:paddingRight="9dip"
                    android:text="datetime"
                    android:textColor="@color/text_whitesmoke"
                    />

            </FrameLayout>

        </LinearLayout>


    </LinearLayout>