<net.phonex.ui.customViews.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:background="?attr/android:actionBarItemBackground"
        android:gravity="center" >

        <View
            android:id="@+id/divider1"
            android:layout_width="wrap_content"
            android:layout_height="1dip"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/divider1"
            android:textColor="?android:attr/textColorPrimary"
            android:text="test318"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="5dip"

            android:ellipsize="marquee"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/divider1"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="16dip"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/from"
            android:layout_below="@+id/from"
            android:layout_marginRight="16dip"
            android:ellipsize="end"
            android:text="Some conversation"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </RelativeLayout>
</net.phonex.ui.customViews.CheckableLinearLayout>